<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id">
            {% for category in categories %}
                <option value="{{category.id}}"{% if product.category_id == category.id %} selected {% endif %}>
                {{category.name}}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Título</div>
    <div>
        <input 
            type="text"
            name="name" 
            value="{{ product.name}}" 
            placeholder="Digite o título do anúncio"
        >
    </div>
</div>

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description">
            {{product.description}}
        </textarea>
    </div>
</div>

{#campo de foto#}

<div class="item">
    <div>Preço</div>
    <div>
        <input 
            type="text"
            name="price" 
            placeholder="Preço do produto"
            value="{{ product.price}}"    
        >
    </div>
    {% if product.old_price %}
        <input 
            type="hidden"
            name="old_price"
            value={{product.old_price}}    
        >
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <div>
        <input 
            type="text"
            name="quantity" 
            value="{{ product.quantity}}" 
            placeholder="Estoque Disponível"
        >
    </div>
</div>
{% if product.status %}
    <div class="item">
        <div>Disponível</div>
        <div>
            <span>
                <input type="radio" name="status" value="1" 
                {% if member.gender == 'M' %} 
                    checked="checked" 
                {% endif %}>
                Sim
            </span>

            <span>
                <input type="radio" name="status" value="0" 
                {% if member.gender == 'F' %}
                    checked="checked"
                {% endif %}>
                Não
            </span>
        </div>
    </div>
{% endif %}
